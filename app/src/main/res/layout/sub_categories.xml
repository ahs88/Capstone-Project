<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="@dimen/list_single_line_item_layout_height"
   >

        <android.support.v7.widget.AppCompatCheckedTextView
            android:id="@+id/sub_category_check"
            android:layout_width="match_parent"
            android:textColor="@color/bazaar_app_bar"
            android:singleLine="true"
            android:textSize="@dimen/list_single_line_text_size"
            android:gravity="start|left|center_vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:checkMarkTint="@color/white"
            android:checkMark="?android:attr/listChoiceIndicatorMultiple"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/list_single_line_padding_edges"
            android:paddingStart="@dimen/list_single_line_padding_edges"
            />

